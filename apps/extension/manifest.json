{
  "manifest_version": 3,
  "name": "noet",
  "version": "0.1.2",
  "description": "noet CLI companion extension for Note.com",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "nativeMessaging"
  ],
  "host_permissions": [
    "https://note.com/*"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://note.com/*"],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
